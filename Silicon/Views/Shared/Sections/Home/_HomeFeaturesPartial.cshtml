@model FeaturesModel

<section id="features">
    <div class="container">
        <h2>@Model.Heading</h2>
        <p>@Model.SubHeading</p>
        <div class="tool-features">
            @if (Model.Features != null && Model.Features.Count() > 0)
            {
                foreach (var feature in Model.Features)
                {
                    <div class="box">
                        <div class="icon-box">
                            <img src="@feature.Image.Source">
                        </div>
                        <h5>@feature.Heading</h5>
                        <p>@feature.Paragraph</p>
                    </div>
                }
            }
        </div>
    </div>
</section>