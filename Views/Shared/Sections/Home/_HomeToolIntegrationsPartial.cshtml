@model ToolIntegrationsModel

<section id="tool-integrations" class="page-section">
    <div class="container">
        <h2>@Model.Heading</h2>
        <p>@Model.Subheading</p>

        <div class="grid-container">
            @if (Model.Tools != null && Model.Tools.Count() > 0)
            {
                foreach (var tool in Model.Tools)
                {
                    <div class="grid-item">
                        <img src="@tool.Logo.Source">
                        <p>@tool.Text</p>
                    </div>
                }
            }
        </div>
    </div>
</section>