@model AccountViewModel
<section id="user-profile-security" class="page-section">
    <div class="container">

        @await Html.PartialAsync("~/Views/Shared/Sections/Account/_AccountMenuPartial.cshtml", Model, ViewData)

        <div class="user-profile-security">
            <h1>Security</h1>
            <h5>Password</h5>

            @if (TempData["Success"] != null)
            {
                <div class="updateSuccessBox" id="updateSuccessBox">@TempData["Success"]?.ToString()</div>
            }
            else if (TempData["Failed"] != null)
            {
                <div class="updateErrorBox" id="updateErrorBox">@TempData["Failed"]?.ToString()</div>
            }

            <form class="form-security" asp-controller="Account" asp-action="SaveNewPassword" novalidate>
                <div class="current-password-group input-group">
                    <label asp-for="Security.Form.CurrentPassword"></label>
                    <input asp-for="Security.Form.CurrentPassword">
                    <span asp-validation-for="Security.Form.CurrentPassword"></span>
                </div >
                <div class="new-password-group input-group">
                    <label asp-for="Security.Form.NewPassword"></label>
                    <input asp-for="Security.Form.NewPassword" id="newPassword">
                    <span asp-validation-for="Security.Form.NewPassword"></span>
                </div>
                <div class="confirm-password-group input-group">
                    <label asp-for="Security.Form.PasswordConfirm"></label>
                    <input asp-for="Security.Form.PasswordConfirm">
                    <span asp-validation-for="Security.Form.PasswordConfirm"></span>
                </div>
                <div class="btn-group">
                    <button type="reset" class="btn-gray">Cancel</button>
                    <button id="securitySubmitBtn" type="submit"  class="btn-disabled" disabled>Save changes</button>
                </div>
            </form>

            <h5 class="delete-account-heading">Delete account</h5>

            <p>When you delete your account, your public profile will be deactivated immediately. If you change your mind before the 14 days are up, sign in with your email and passwordn, and we'll send you a link to reactivate your account</p>

            <div class="checkbox-group">
                <label class="checkbox-container">
                    <input type="checkbox" id="delete-checkbox">
                    <span class="checkmark"></span>
                </label>
                <label for="delete-checkbox">Yes, I want to delete my account</label>
            </div>

            <button class="btn-danger">Delete</button>
        </div>
    </div>
</section>
@await Html.PartialAsync("_AccountSecurityValidationPartial")
